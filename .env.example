DOCKER_BUILDKIT=1

# Volume paths (optional, defaults to Docker-managed volumes)
# SUBSTRATE_DATA_PATH=./volumes/substrate-data
# MODEL_WEIGHTS_PATH=./volumes/models
# VORTEX_OUTPUT_PATH=./volumes/vortex-output
# PROMETHEUS_DATA_PATH=./volumes/prometheus-data
# GRAFANA_DATA_PATH=./volumes/grafana-data

# ============================================================================
# Development Tools
# ============================================================================
# Enable/disable specific services
ENABLE_JAEGER=true
ENABLE_VORTEX=true
ENABLE_STUN_TURN=true

# Logging
LOG_LEVEL=info
RUST_LOG=info
PYTHONUNBUFFERED=1

# ============================================================================
# Network Configuration
# ============================================================================
DOCKER_NETWORK_SUBNET=172.28.0.0/16

# Port mappings (in case of conflicts)
SUBSTRATE_WS_PORT=9944
SUBSTRATE_HTTP_PORT=9933
SUBSTRATE_P2P_PORT=30333
SUBSTRATE_METRICS_PORT=9615

# ============================================================================
# Model Download Configuration
# ============================================================================
# Set to 'true' to force re-download of models
FORCE_MODEL_DOWNLOAD=false

# Model download URLs (override if using mirror)
# FLUX_MODEL_URL=https://huggingface.co/black-forest-labs/FLUX.1-schnell/resolve/main/flux1-schnell.safetensors
# LIVEPORTRAIT_MODEL_URL=https://huggingface.co/KwaiVGI/LivePortrait/resolve/main/liveportrait.pth

