# NSN Local Development Environment Configuration
# Copy this file to .env and adjust values as needed

# ============================================================================
# Substrate Node Configuration
# ============================================================================
SUBSTRATE_WS_URL=ws://localhost:9944
SUBSTRATE_HTTP_URL=http://localhost:9933
SUBSTRATE_LOG_LEVEL=info
SUBSTRATE_P2P_PORT=30333

# Chain configuration
CHAIN_NAME=nsn-dev
CHAIN_TYPE=Development

# ============================================================================
# Vortex Engine Configuration
# ============================================================================
VORTEX_GRPC_PORT=50051
VORTEX_METRICS_PORT=9100
VORTEX_MODELS_PATH=/models
VORTEX_OUTPUT_PATH=/output
VORTEX_MAX_VRAM_GB=11.8
VORTEX_LOG_LEVEL=INFO

# GPU configuration
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=all

# ============================================================================
# STUN/TURN Server Configuration
# ============================================================================
STUN_SERVER=stun://localhost:3478
TURN_SERVER=turn://localhost:3479
TURN_USER=nsn
TURN_PASSWORD=password
TURN_REALM=nsn.local

# ============================================================================
# Observability Stack Configuration
# ============================================================================
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_RETENTION_TIME=7d

GRAFANA_URL=http://localhost:3000
GRAFANA_ADMIN_USER=admin
# WARNING: CHANGE THIS PASSWORD for any non-localhost deployment!
GRAFANA_ADMIN_PASSWORD=admin

JAEGER_URL=http://localhost:16686
JAEGER_OTLP_GRPC_PORT=4317
JAEGER_OTLP_HTTP_PORT=4318

# ============================================================================
# Development Accounts (Pre-funded)
# ============================================================================
# These are well-known development accounts - DO NOT use in production!
