{
	"$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"files": {
		"ignore": [
			"**/target/**",
			"**/dist/**",
			"**/node_modules/**",
			"**/coverage/**",
			"**/test-results/**",
			"**/playwright-report/**",
			"**/*.min.js"
		]
	}
}
